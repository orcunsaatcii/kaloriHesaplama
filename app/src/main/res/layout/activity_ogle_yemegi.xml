<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape1"
    android:orientation="vertical"
    tools:context=".AnaSayfa">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:text="ÖĞLEN YEMEĞİ"
        android:gravity="center"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/makarna_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/salata_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/borek_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/findik_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ceviz_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/elma_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/portakal_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/limonata_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/kepekekmegioglen_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text=""
                        android:textSize="18sp" />








                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/makarna_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/salata_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/borek_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/findik_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/ceviz_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/elma_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/portakal_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/limonata_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:ems="3"
                        android:hint="0"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/kepekekmegioglen_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:ems="3"
                        android:hint="0"
                        android:textAlignment="center" />


                    <Button
                        android:id="@+id/aksam_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="AKŞAM"
                        android:layout_marginLeft="50dp"/>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>